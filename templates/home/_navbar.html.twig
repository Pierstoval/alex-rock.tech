                {%- set route_name = app.request.attributes.get('_route', 'home') -%}
                {%- set route_params = app.request.attributes.get('_route_params', {})|merge({_locale: locale}) -%}
                <li class="nav-item mx-0 mx-lg-1">
                    <a class="nav-link py-3 px-lg-3 text-info" href="{{ path(route_name, route_params) }}">
                        {{- locale|upper -}}
                    </a>
                </li>
            </ul>
        </div>
    </div>
